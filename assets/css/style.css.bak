*{
	padding:0;
	margin:0;
	box-sizing:border-box;
	font-family: 'PT Sans', sans-serif;
}
.row,
.row::after,
.row::before{
	clear:both;
	display:table;
	width:100%;
}
a:link,
a:hover,
a:focus,
a:active{
	text-decoration:none;
}
.mr-bt70{
	margin-bottom:70px;
}
.mb-20{
	margin-bottom:20px;
}
.mb-90{
	margin-bottom:90px;
}
.mb-80{
	margin-bottom:80px;
}

.w9{
	width:calc(900% / 12);
	margin:0 auto;
}
.text-center{
	text-align:center;
}
.mb-42{
	margin-bottom:42px;
}
.mb-135{
	margin-bottom:135px;
}

.col12,.col6,.col4,.col3,.col9,.col1{
	padding:0px 15px;
	float:left;
}
.col6{
	width:50%;
}
.col12{
	width:100%;
}
.col4{
	width:calc(100% / 3);
}
.col3{
	width:25%;
}
.col1{
	width:calc(100% / 12);
}
.col9{
	width:75%;
}
.tinyone{
	background-color:#fcdb00;
	padding:75px 0px 110px;
}
.container{
	width:930px;
	margin:0 auto;
}
.row >:first-child{
	padding-left:0px;
}
.row >:last-child{
	padding-right:0px;
}

.navbar{
	text-align:right;
	margin-left:20px;
}
.navbar li, .icons li {
	display:inline-block;
	list-style:none;
}
.navbar li a{
	display:inline-block;
	text-transform:capitalize; 
	color:#010101;
	font-size:22px;
	font-weight:bold;
	padding: 12px;
	margin:0px 24px 0px 24px;
}
.navbar li a.mr-right0{
	margin-right:-12px;
}

.navbar li a.active,
.navbar li a:hover,
.navbar li a:focus,
.navbar li a:active{
	font-weight:lighter;
}
.info{
	padding-right:calc(100% / 6);
	padding-top:72px;
}

.heading{
	font-weight:bold;
	font-size:32px;
	color:010101;
	/* margin-top:75px; */
	
}
.info h4{
	font-size:24px;
	font-weight:lighter;
	color:#313841;
	margin:24px 0;
}
.para{
	font-size:20px;
	color:#555555;
	/* margin-bottom:42px; */
}
.icons li a{
	color:#010101;
	font-size:42px;
	margin:0px 19px 0px 19px;
}
.apple{
	margin-left:-19px;
}
.ipad img{
	width:100%;
}
.ipad{
	padding:0 calc(100% / 6);
	
}

/* ~~~~~~~~~~~~features section css~~~~~~~~~~~ */
.features{
	padding:115px 0px 165px;
}
.thumb-img i {
	font-size:50px;
}
.thumb-info-heading{
	margin-bottom:15px;
	color:#010101;
	font-size:22px;
}
.thumb-info-para{
	font-size:16px;
	color:#898989;
}
.thumb-info{
	padding-right:22px;
}
/* ~~~~~~~~~~~~~~~~~~footer section css~~~~~~~~~~~~~~~~ */
.footer{
	background-color:#010101;
	padding:100px 0 140px;
}
.footer .heading{
	color:#fcdb00;
}
.footer .para{
	color:#fcdb00;
	font-size:20px;
	color:898989;
}
.btn-primary,.email{
	border-radius:10px;
	border:0px;
	outline:none;
}
.btn-primary{
	width:130px;
	margin-left:15px;
	padding:20px 35px;
	background-color:#fcdb00;
	cursor:pointer;
	font-weight:bold;
	text-transform:uppercase;
	font-size:16px;
	color:#010101;
}
.email{
	width:calc(100% - 150px);
	padding:20px 25px;
}
.email::placeholder{
	color:#898989;
	font-size:16px;
}
.footer .icons li a{
	font-size:30px;
	color:#fbdb00;
}
.footer .icons li a{
	margin:0 15px;
}
.footerlinks div{
	color:#fff;
}
.footerlinks .col1{
	margin-left:calc(100% / 12);
}
.footerinfo{
	list-style:none;
}
.footerinfo li{
	margin-bottom:5px;
}
.footerinfo li,.footerinfo li a{
	font-size:16px;
	color:#fff;
}

